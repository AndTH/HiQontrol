#:kivy 1.0.9

#:import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#:import Logger kivy.logger.Logger

<SettingsLabel@Label>
    size_hint_x: .5
    text_size: self.size
    halign: 'right'
    valign: 'middle'

<HiQNetAddressInput>
    multiline: False

# Can't get used to BoxLayout being horizontal by default
<VBoxLayout@BoxLayout>
    orientation: 'vertical'

<Slider>
    orientation: 'vertical'

<Popup>
    size_hint: .75, .75

<HomeScreen@Screen>

<ListLocateButton>
    on_press: app.locateToggle(self.hiqnet_address, self.ip_address, self.serial_number)

# FIXME: there should really be a better way than parent[n] to get the topmost element
<ListInfoButton>
    on_press: root.parent.parent.parent.parent.infos.open()

<ListMixButton>
    on_press:
        root.parent.parent.parent.parent.parent.parent.parent.parent.parent.parent.transition = FallOutTransition()
        root.parent.parent.parent.parent.parent.parent.parent.parent.parent.parent.current = 'mix'

<MixScreenProto@Screen>

<HiQontrol>:
    add: add.__self__
    rem: rem.__self__
    about: about.__self__

    HomeScreen:
        id: home
        name: 'home'

        # TODO: Add an appealing background. Perhaps similar to the splashscreen.

        Popup:
            id: about
            title: "About " + app.title
            on_parent:
                if self.parent == home: self.parent.remove_widget(self)

            VBoxLayout:

                VBoxLayout:
                    size_hint_y: None

                    Label:
                        text: "A HiQnet controller for Soundcraft Si Compact 16 digital mixing consoles"

                    Label:
                        text: "Version " + app.__version__ + " - Copyright (C) 2014 RaphaÃ«l Doursenaud"

                GridLayout:
                    cols: 2

                    SettingsLabel:
                        text: "Name:"

                    TextInput:
                        id: local_name
                        text: app.getLocalName()
                        multiline: False
                        focus: True
                        on_text: app.storeNeedsUpdate()
                        # FIXME: upstream bug? Fatal Python error: (pygame parachute) Segmentation Fault
                        #on_text_validate: local_hiqnet_address.focus = True

                    SettingsLabel:
                        text: "HiQnet Address:"

                    HiQNetAddressInput:
                        # FIXME: only allow int values 1-65535
                        id: local_hiqnet_address
                        text: app.getLocalHiQNetAddress()
                        focus: False
                        on_text: app.storeNeedsUpdate()

                    SettingsLabel:
                        text: "MAC Address:"

                    TextInput:
                        text: app.getLocalMACAddress()
                        disabled: True

                    SettingsLabel:
                        text: "DHCP:"

                    CheckBox:
                        active: app.getLocalDHCPStatus()
                        disabled: True

                    SettingsLabel:
                        text: "IP Address:"

                    TextInput:
                        text: app.getLocalIPAddress()
                        disabled: True

                    SettingsLabel:
                        text: "Subnet Mask:"

                    TextInput:
                        text: app.getLocalSubnetMask()
                        disabled: True

                    Label:
                        size_hint_x: None
                        text_size: self.size
                        halign: 'right'
                        text: "Gateway:"

                    TextInput:
                        text: app.getLocalGateway()
                        disabled: True

                Button:
                    text: "OK"
                    size_hint_y: None
                    on_press:
                        # Save TextInput values on pressing OK
                        # FIXME: put_async is broken upstream but would be far better
                        app.storeUpdate(local_name.text, local_hiqnet_address.text)
                        about.dismiss()

        Popup:
            id: infos
            title: "Device informations"
            on_parent:
                if self.parent == home: self.parent.remove_widget(self)

            VBoxLayout:

                GridLayout:
                    cols: 2

                    SettingsLabel:
                        text: "Model:"

                    TextInput:
                        text: app.getModel()
                        disabled: True

                    SettingsLabel:
                        text: "Name:"

                    TextInput:
                        text: app.getName()
                        disabled: True

                    SettingsLabel:
                        text: "IP Address:"

                    TextInput:
                        text: app.getIPAddress()
                        disabled: True

                    SettingsLabel:
                        text: "HiQnet Address:"

                    HiQNetAddressInput:
                        text: app.getHiQnetAddress()
                        disabled: True

                Button:
                    text: "OK"
                    size_hint_y: None
                    on_press: infos.dismiss()

        Popup:
            id: add
            title: "Add a device"
            on_parent:
                if self.parent == home: self.parent.remove_widget(self)

            VBoxLayout:

                GridLayout:
                    cols: 2

                    Label:
                        text: "Model:"
                        size_hint_x: .5
                    # TODO: maybe replace by a dropdown list
                    TextInput:
                        text: "Si Compact 16"
                        disabled: True

                    Label:
                        text: "HiQnetAddress:"
                        size_hint_x: .5
                    HiQNetAddressInput:
                        # TODO: number input only

                Button:
                    text: "Add"
                    size_hint_y: None
                    on_press:
                        add.dismiss()
                        # TODO: do something useful

        Popup:
            id: rem
            title: "Remove a device"
            on_parent:
                if self.parent == home: self.parent.remove_widget(self)

            VBoxLayout:
                Label:
                    text: "Are you sure?"

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None

                    Button:
                        text: "No"
                        on_press: rem.dismiss()

                    Button:
                        text: "Yes"
                        on_press:
                            rem.dismiss()
                            # TODO: do something useful

        VBoxLayout:

            ActionBar:
                size_hint_y: None

                ActionView:
                    orientation: 'horizontal'

                    ActionPrevious:
                        app_icon: 'assets/icon.png'
                        title: "Home"
                        with_previous: False
                    ActionButton:
                        text: "About"  # TODO: replace by a nice icon
                        on_press: about.open()

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                padding: 100

                VBoxLayout:

                    GridLayout:
                        id: console_list
                        infos: infos.__self__
                        cols: 2

                        ListView:
                            infos: infos.__self__
                            adapter: root.list

#                    GridLayout:
#                        # TODO: maybe replace by a ListView?
#                        cols: 3
#
#                        Button:
#                            text: "Si Compact 16"
#                            on_press:
#                                root.transition = FallOutTransition()
#                                root.current = 'mix'
#
#                        ToggleButton:
#                            size_hint_x: None
#                            text: "L"  # TODO: replace by a nice icon
#                            on_press: app.locateToggle(infos.hiqnet_address, infos.ip_address)
#
#                        Button:
#                            size_hint_x: None
#                            text: "i"  # TODO: replace by a nice icon
#                            on_press: infos.open()
#
                    VBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None

                        Button:
                            text: "-"  # TODO: replace by a nice icon
                            disabled: True  # TODO: make them do something usefull
                            on_press: root.rem.open()
                        Button:
                            text: "+"  # TODO: replace by a nice icon
                            disabled: True  # TODO: make them do something usefull
                            on_press: root.add.open()


    MixScreenProto:
        id: mix
        name: 'mix'

        VBoxLayout:

            ActionBar:
                size_hint_y: None

                ActionView:

                    ActionPrevious:
                        app_icon: 'assets/icon.png'
                        title: "Mix"
                        on_release:
                            root.transition = RiseInTransition()
                            root.current = 'home'

            # TODO: make this layout generative according to the console's description file
