<SettingsScreen>:
    name: 'settings'

    BoxLayout:
        orientation: 'vertical'

        ActionBar:
            size_hint_y: None

            ActionView:

                ActionPrevious:
                    app_icon: 'assets/icon.png'
                    title: 'Mix'
                    on_release:
                        root.manager.transition = RiseInTransition()
                        root.manager.current = 'main'

        GridLayout:
